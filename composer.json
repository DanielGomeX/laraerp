{
    "name": "laraerp/laraerp",
    "description": "ERP brasileiro de c√≥digo fonte aberto escrito sob o Laravel Framework PHP",
    "keywords": ["erp", "openerp", "erp php", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "laravel/framework": "4.2.*",
        "zizaco/confide": "~4.0@dev",
        "laraerp/pessoa": "dev-master",
        "laraerp/endereco": "dev-master",
        "laravelbook/ardent": "~2.4"
    },
    "autoload": {
        "classmap": [
            "app/commands",
            "app/controllers",
            "app/models",
            "app/database/migrations",
            "app/database/seeds",
            "app/tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize",
            "php artisan migrate --package=\"laraerp/pessoa\" --force",
            "php artisan migrate --package=\"laraerp/endereco\" --force",
            "php artisan db:seed"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "stable"
}
